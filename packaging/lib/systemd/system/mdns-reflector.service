[Unit]
Description=Stateful mDNS Reflector
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
ExecStart=/usr/bin/mdns-reflector --config /etc/mdns-reflector/config.yaml
Restart=on-failure
WorkingDirectory=/etc/mdns-reflector

# Security: Allow binding to 5353 and raw socket access
CapabilityBoundingSet=CAP_NET_BIND_SERVICE CAP_NET_RAW CAP_NET_ADMIN
AmbientCapabilities=CAP_NET_BIND_SERVICE CAP_NET_RAW CAP_NET_ADMIN

[Install]
WantedBy=multi-user.target
